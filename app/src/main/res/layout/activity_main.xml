<?xml version="1.0" encoding="utf-8"?>
<GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:theme="@style/AppTheme"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".MainActivity"
        >


    <TextView
            android:layout_width="357dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/text_sm"
            android:layout_row="0"
            android:layout_column="0"
            android:background="#FFFFFF"
            android:padding="5dp"
            android:textSize="20dp"
            android:singleLine="true"
            android:longClickable="false"
            android:textIsSelectable="false"
            android:textColor="#000000"
            android:textAlignment="textEnd"
            android:layout_columnSpan="5"/>

    <TextView
            android:layout_width="357dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/text_lg"
            android:layout_row="1"
            android:layout_column="0"
            android:background="#FFFFFF"
            android:padding="5dp"
            android:textSize="40dp"
            android:singleLine="true"
            android:longClickable="false"
            android:textIsSelectable="false"
            android:textColor="#000000"
            android:textAlignment="textEnd"
            android:layout_columnSpan="5"/>

    <Button
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:text="@string/btn_c"
            android:id="@+id/btn_c"
            android:layout_row="2"
            android:layout_column="0"
            android:background="#000000"
            android:layout_margin="2dp"
            android:textColor="#FFFFFF"
            />

    <Button
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:text="@string/btn_del"
            android:id="@+id/btn_del"
            android:layout_row="2"
            android:layout_column="1"
            android:background="#000000"
            android:layout_margin="2dp"
            android:textColor="#FFFFFF"
            />

    <Button
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:text="@string/btn_div"
            android:id="@+id/btn_divide"
            android:layout_row="2"
            android:layout_column="3"
            android:background="#000000"
            android:layout_margin="2dp"
            android:textColor="#FFFFFF"
            />

    <Button
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:text="@string/btn_mul"
            android:id="@+id/btn_multiply"
            android:layout_row="2"
            android:layout_column="4"
            android:background="#000000"
            android:layout_margin="2dp"
            android:textColor="#FFFFFF"
            />
    <Button
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:text="@string/btn_7"
            android:id="@+id/btn_7"
            android:layout_row="3"
            android:layout_column="0"
            android:background="#000000"
            android:layout_margin="4dp"
            android:textColor="#FFFFFF"
            />

    <Button
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:text="@string/btn_8"
            android:id="@+id/btn_8"
            android:layout_row="3"
            android:layout_column="1"
            android:background="#000000"
            android:layout_margin="2dp"
            android:textColor="#FFFFFF"
            />

    <Button
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:text="@string/btn_9"
            android:id="@+id/btn_9"
            android:layout_row="3"
            android:layout_column="3"
            android:background="#000000"
            android:layout_margin="2dp"
            android:textColor="#FFFFFF"
            />

    <Button
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:text="@string/btn_sub"
            android:id="@+id/btn_sub"
            android:layout_row="3"
            android:layout_column="4"
            android:background="#000000"
            android:layout_margin="2dp"
            android:textColor="#FFFFFF"
            />

    <Button
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:text="@string/btn_4"
            android:id="@+id/btn_4"
            android:layout_row="4"
            android:layout_column="0"
            android:background="#000000"
            android:layout_margin="2dp"
            android:textColor="#FFFFFF"
            />

    <Button
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:text="@string/btn_5"
            android:id="@+id/btn_5"
            android:layout_row="4"
            android:layout_column="1"
            android:background="#000000"
            android:layout_margin="2dp"
            android:textColor="#FFFFFF"
            />

    <Button
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:text="@string/btn_6"
            android:id="@+id/btn_6"
            android:layout_row="4"
            android:layout_column="3"
            android:background="#000000"
            android:layout_margin="2dp"
            android:textColor="#FFFFFF"
            />

    <Button
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:text="@string/btn_add"
            android:id="@+id/btn_add"
            android:layout_row="4"
            android:layout_column="4"
            android:background="#000000"
            android:layout_margin="2dp"
            android:textColor="#FFFFFF"
            />
    <Button
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:text="@string/btn_1"
            android:id="@+id/btn_1"
            android:layout_row="5"
            android:layout_column="0"
            android:background="#000000"
            android:layout_margin="2dp"
            android:textColor="#FFFFFF"
            />

    <Button
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:text="@string/btn_2"
            android:id="@+id/btn_2"
            android:layout_row="5"
            android:layout_column="1"
            android:background="#000000"
            android:layout_margin="2dp"
            android:textColor="#FFFFFF"
            />

    <Button
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:text="@string/btn_3"
            android:id="@+id/btn_3"
            android:layout_row="5"
            android:layout_column="3"
            android:background="#000000"
            android:layout_margin="2dp"
            android:textColor="#FFFFFF"
            />

    <Button
            android:layout_width="85dp"
            android:layout_height="144dp"
            android:text="@string/btn_eq"
            android:id="@+id/btn_eq"
            android:layout_row="5"
            android:layout_column="4"
            android:layout_rowSpan="2"
            android:background="#ff8f04"
            android:layout_margin="2dp"
            android:textSize="20dp"
            />
    <Button
            android:layout_width="181dp"
            android:layout_height="70dp"
            android:text="@string/btn_0"
            android:id="@+id/btn_0"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:background="#000000"
            android:layout_margin="2dp"
            android:textColor="#FFFFFF"
            />

    <Button
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:text="@string/btn_dot"
            android:id="@+id/btn_dot"
            android:layout_row="6"
            android:layout_column="3"
            android:background="#000000"
            android:layout_margin="2dp"
            android:textColor="#FFFFFF"
            />

</GridLayout>
